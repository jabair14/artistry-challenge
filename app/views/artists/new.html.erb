<h1> New Artist Page </h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @artist do |f| %>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br> 
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
    <br>
    <%= f.label :age %>
    <br>
    <%= f.number_field :age %>
    <br>
   
    <br>
    <%= f.submit %>
<% end %>